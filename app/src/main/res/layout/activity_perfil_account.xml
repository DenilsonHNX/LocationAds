<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9FAFB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PerfilAccount">

        <!-- Header Background com Gradiente -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/gradient_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/circle_button_bg"
            android:tint="@color/white"
            android:contentDescription="Voltar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UseAppTint" />

        <!-- Logout Button -->
        <ImageButton
            android:id="@+id/btnLogOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_logout"
            android:background="@drawable/circle_button_bg"
            android:tint="@color/white"
            android:contentDescription="Sair"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UseAppTint" />

        <!-- Profile Image Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileImageCard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="12dp"
            app:strokeWidth="6dp"
            app:strokeColor="@color/white"
            android:layout_marginTop="170dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Edit Profile Button (Floating) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toEditPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:fabSize="normal"
            app:tint="@color/white"
            app:backgroundTint="#2563EB"
            app:elevation="8dp"
            app:layout_constraintEnd_toEndOf="@id/profileImageCard"
            app:layout_constraintBottom_toBottomOf="@id/profileImageCard"
            android:layout_marginEnd="-12dp"
            android:layout_marginBottom="-12dp"
            android:contentDescription="Editar perfil" />

        <!-- Profile Name -->
        <TextView
            android:id="@+id/perfilName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do UsuÃ¡rio"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/profileImageCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- User Email (subtitle) -->
        <TextView
            android:id="@+id/perfilEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@exemplo.com"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/perfilName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/perfilEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- EstatÃ­sticas Card (MOVIDO PARA CIMA) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Card Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minhas EstatÃ­sticas"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Stats Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Visualizados -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/stats_item_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘ï¸"
                                android:textSize="32sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/statsVisualizados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#2563EB"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vistos"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Guardados -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/stats_item_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”–"
                                android:textSize="32sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/statsGuardados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#2563EB"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salvos"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Publicados -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/stats_item_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“"
                                android:textSize="32sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/statsPublicados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#2563EB"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Criados"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- InformaÃ§Ãµes da Conta Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Card Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="InformaÃ§Ãµes da Conta"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Email Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <!-- Emoji em vez de Ã­cone -->
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ“§"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/stats_item_bg" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/info_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email@exemplo.com"
                                android:textSize="16sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginVertical="8dp" />

                    <!-- Phone Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <!-- Emoji em vez de Ã­cone -->
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ“±"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/stats_item_bg" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Telefone"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/info_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+244 999 999 999"
                                android:textSize="16sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginVertical="8dp" />

                    <!-- Creation Date Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <!-- Emoji em vez de Ã­cone -->
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ“…"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/stats_item_bg" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Membro desde"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/info_dataCriancaoDaConta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 de Dezembro de 2025"
                                android:textSize="16sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
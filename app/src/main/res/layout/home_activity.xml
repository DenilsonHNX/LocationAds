<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="LocationAds"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Barra de escolha entre Mapa e Lista -->
    <LinearLayout
        android:id="@+id/barraEscolha"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="#EEE">

        <Button
            android:id="@+id/btnMapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mapa"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnLocais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Locais Próximos"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Barra de escolha entre Mapa e Lista já existente -->

    <!-- Container para alternar entre mapa e lista -->
    <FrameLayout
        android:id="@+id/mapaOuListaContainer"
        android:layout_below="@id/barraEscolha"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginTop="15dp"
        android:background="#F3F3F3">

        <!-- MAPA: Fragment Google Maps -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <!-- LISTA: RecyclerView para mostrar os locais, inicialmente oculto -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaLocais"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/localizacao"
        android:layout_below="@id/mapaOuListaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualmente em: "
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/locActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talatona"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollAnuncios"
        android:layout_below="@id/localizacao"
        android:layout_above="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/containerAnuncios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_anuncio" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/barraInferior"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/btnToList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_list"
            android:contentDescription="Lista"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/btnToAddAds"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/btnToIdea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_idea"
            android:contentDescription="Ideia"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/btnToPerfil"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_account"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </LinearLayout>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageCard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgAnuncio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:contentDescription="Imagem do anúncio" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/imageCard"
            app:layout_constraintEnd_toStartOf="@id/actionsContainer"
            app:layout_constraintTop_toTopOf="@id/imageCard">

            <!-- Badge Promovido -->
            <LinearLayout
                android:id="@+id/badgePromovido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_promoted_bg"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    android:tint="#FFA500"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promovido"
                    android:textSize="10sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/txtTituloAnuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título do Anúncio"
                android:textColor="#1A1A1A"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Localização -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_location"
                    android:tint="#757575"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/txtLocalAnuncio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luanda — Talatona"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Descrição -->
            <TextView
                android:id="@+id/txtDescricaoAnuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Descrição breve do anúncio…"
                android:textColor="#666666"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Preço -->
            <TextView
                android:id="@+id/txtPrecoAnuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="120.000 Kz"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Actions Container -->
        <LinearLayout
            android:id="@+id/actionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/contentContainer"
            app:layout_constraintBottom_toBottomOf="@id/contentContainer">

            <!-- Botão Apagar -->
            <ImageButton
                android:id="@+id/btnApagar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#E53935"
                android:visibility="gone"
                android:contentDescription="Apagar anúncio"
                tools:ignore="UseAppTint" />

            <!-- Botão Promovido -->
            <ImageButton
                android:id="@+id/btnPromovido"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_star"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFA500"
                android:contentDescription="Promover anúncio"
                tools:ignore="UseAppTint" />

            <!-- Botão Guardar -->
            <ImageButton
                android:id="@+id/btnGuardar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_save"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#757575"
                android:contentDescription="Guardar anúncio"
                tools:ignore="UseAppTint" />

            <!-- Botão Partilhar -->
            <ImageButton
                android:id="@+id/btnPartilhar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#757575"
                android:contentDescription="Partilhar anúncio"
                tools:ignore="UseAppTint" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

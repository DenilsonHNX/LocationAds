<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card"
    android:padding="10dp"
    android:id="@+id/main"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgAnuncio"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_placeholder"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtTituloAnuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título do Anúncio"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescricaoAnuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Descrição breve do anúncio…"
            android:textColor="#3A3A3A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtLocalAnuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Luanda — Talatona"
            android:textColor="#555555"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtPrecoAnuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="120.000 Kz"
            android:textColor="#0D59EC"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">


        <ImageButton
            android:id="@+id/btnApagar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Apagar anúncio"
            android:src="@drawable/ic_delete"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnPromovido"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Promovido"
            android:src="@drawable/ic_star" />

        <ImageButton
            android:id="@+id/btnGuardar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Guardar"
            android:src="@drawable/ic_save" />

        <ImageButton
            android:id="@+id/btnPartilhar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Partilhar"
            android:src="@drawable/ic_share" />

    </LinearLayout>

</LinearLayout>

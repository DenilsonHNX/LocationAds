<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="LocationAds"
        android:textColor="@android:color/black"
        android:textSize="38sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ensinar o seu e-mail no campo abaixo para receber o código de recuperação e alterar sua senha"
        android:layout_marginBottom="30dp"
        android:textColor="#000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Digite seu email"
        android:padding="15dp"
        android:background="@drawable/edittext_background"
        android:inputType="text"
        android:textColorHint="#999"
        android:textColor="#000"
        android:drawablePadding="10dp" />

    <Button
        android:id="@+id/recovery_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="Enviar"
        android:textAllCaps="false"
        android:background="@drawable/button_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deseja acessar sua conta?"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/toLogin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Entrar"
            android:textColor="#ACACAC"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>